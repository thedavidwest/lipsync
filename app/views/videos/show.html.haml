.mobile_container
  .video_wrapper
    .video_content
      %img.ratio{:src => "http://placehold.it/16x9"}/
      %iframe#player{:allowfullscreen => "", :frameborder => "0", :src => "https://www.youtube.com/embed/#{@video.url}?rel=0&amp;amp;showinfo=0;enablejsapi=1"}
    .video_foot
      .video_info
        %h1= @video.artist
        %h1 -
        %h1= @video.title
    .user_links

      = link_to 'Edit', edit_video_path(@video)
      = link_to 'Back to All', videos_path
      = link_to 'New', new_video_path
