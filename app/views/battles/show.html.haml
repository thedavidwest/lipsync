.home_wrap
  .flex_wrap
    .app_wrap
      %h1.header // Battle //
      .player_one
        .player_image
          = image_tag (@battle.avatar)
        .player_name
          %h1= @battle.singer1
      %h1.versus v
      .player_two
        .player_image
          = image_tag (@battle.photo)
        .player_name
          %h1= @battle.singer2
      .vote
        =link_to like_battle_path(@battle), method: :put do |u|
          .vote_btn_one
            %p= @battle.singer1
            %i.fa.fa-thumbs-o-up(aria-hidden='true')
            = @battle.get_upvotes.size
        =link_to dislike_battle_path(@battle), method: :put do |u|
          .vote_btn_two
            %p= @battle.singer2
            %i.fa.fa-thumbs-o-up(aria-hidden='true')
            = @battle.get_downvotes.size
      =link_to "Back", battles_path
